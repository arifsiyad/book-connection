<% title('Contact Us') %>

<% error_messages_for(:contact_form) %>

<% form_for(@contact_form, :url => contact_path) do |form| %>
  <table class="striped">
    <tfoot>
      <tr>
        <th></th>
        <td><%= submit_tag('Submit Your Message') %></td>
      </tr>
    </tfoot>
    <tbody>
      <tr class="odd">
        <th><%= form.label(:name) %></th>
        <td><%= form.text_field(:name, { :value => self.current_user.try(:name) }) %></td>
      </tr>
      <tr class="even">
        <th><%= form.label(:email) %></th>
        <td>
          <%= form.text_field(:email, { :value => self.current_user.try(:email) }) %>
          <%= error_message_on(:contact_form, :email, :prepend_text => 'Email ') %>
        </td>
      </tr>
      <tr class="odd">
        <th><%= form.label(:subject) %></th>
        <td>
          <%= form.text_field(:subject) %>
          ( <%= form.check_box(:bug) %><small><%= form.label(:bug, " I think I found a bug!") %></small> )
        </td>
      </tr>
      <tr class="even last">
        <th>
          <%= form.label(:message) %>
          <span>(required)</span>
        </th>
        <td>
          <%= form.text_area(:message, { :rows => 10, :cols => 30 }) %>
          <%= error_message_on(:contact_form, :message, :prepend_text => 'Message ') %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
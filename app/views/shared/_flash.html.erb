<% if flash[:warning] || flash[:errors] %>
  <div class="flash-warning">
    <div>
      <% flash.each do |key, message| %>
        <%= sanitize(message) %><br />
      <% end %>
    </div>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="flash-notice">
    <div>
      <% flash.each do |key, message| %>
        <%= sanitize(message) %><br />
      <% end %>
    </div>
  </div>
<% end %>